/**
 * Section - Contact
 */
 
 #section-contact
    background url(../images/fondo.jpg)
    padding 3em 0 2em 0    
    margin 2px 0
    text-align center
    
    h3
        font-size 2em
        width 40%
        margin 0em auto 1em auto
        color #fff
        font-weight 400
        
    form
        font-size: 0.7em
        width 47%
        margin 0 auto
        padding 0.5em

    input
        outline none
        border none
        font-family 'Open Sans', sans-serif
        
    input[type="text"]
        padding 1em
        width 76.33%
        text-transform uppercase 
        color #81888d
    
    input[type="submit"]
        margin-top 8px
        background #191F2F
        padding 1em 3em
        color #fff
        cursor pointer
        transition(all 0.3s ease-out)
        
        &:hover
            margin-top 15px
            background #ABC400


/**
 * Footer
 */
 
 .footer
    padding 5px 0
    
    .home
        display block
        float left
        width 12%
        
        img
            width 100%
        
    .links
        padding 0px
        margin 5px 0 0 0
        width 76%
        float left
        text-align center 
        
        li
            display inline-block
            margin 0 10px
            
        a
            color #777
            display block
            margin 0px 2px
            text-transform uppercase
            font-size 1em

            &:hover
                color #333
                    
    .social
        padding 0px
        margin 0px
        width 12%
        float left
        
        li 
            display inline-block
            margin-left 5px
        
            a
                height 32px
                width 32px
                display block  
                background url(../images/img-sprite.png) no-repeat
                           
            &.tw a
                background-position -100px -46px
                &:hover
                    background-position -100px -80px
                
            
            &.fb a 
                background-position -145px -46px
                &:hover
                    background-position -145px -80px

    .copy
        padding-top 20px
        clear both
        font-size 0.85em
        color #949494
        text-align center
        



 #video1
