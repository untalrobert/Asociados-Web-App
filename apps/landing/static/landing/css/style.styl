/**
 * Section - How to download
 */
     
#section-download
    h2
        title(2.6em, #000)
        
    .subtitle
        subtitle(1.1em, #777)
        
    ul
        color #D8852E
        margin 50px 0 10px 0
        padding 0px
        
    li
        margin 0px
        display inline-block
        width 33%
        vertical-align top 

    .description
        float left
        width 54.5%
        margin-top 7%

    h4 
        font-weight 400
        font-size 1.3em
