/**
 * Utils & mixins
 */
 
vendor(prop, args)
    -webkit-{prop} args
    -moz-{prop} args
    -o-{prop} args
    {prop} args

text-shadow() 
    vendor('text-shadow', arguments)

box-shadow() 
    vendor('box-shadow', arguments)
  
transition()
    vendor('transition', arguments)
    
transform()
    vendor('transform', arguments)
  
title(size, color)
    color color
    font-size size
    text-align center
    font-weight 300
    margin 10px 0
    text-shadow(-1px 0px 0px #868585)

subtitle(size, color)
    color color
    font-size size
    text-align center
    

/**
 * Commons
 */
 
 a 
    text-decoration none
    
 body
    font-family 'Lato', sans-serif

 .wrap
    height 100%
    width 90%
    margin 0 auto
    /*overflow hidden*/


/**
 * Navegation
 */
 
 nav 
    background #22BA64
    position fixed
    z-index 999
    top 0px
    width 100%
    height 60px
    border-bottom 1px solid rgba(238, 238, 238, 0.49)
    text-shadow(0px 3px 5px rgba(60, 60, 60, 0.03))
    .nav_movil
        display none
    
    .logo
        margin-top 10px
        float left
    ul
        float right
        margin 0px
        padding 0px
    
    li
        display inline-block

        &.active > a, a:hover
            color: #F3FF00
        a
            color #fff
            text-transform uppercase
            font-size 0.875em
            padding 1.5em
            display block

    #toggle-nav
        display none
        float right
        padding 1em
    
    
/**
 * Header
 */
 
 .header
    background url(../images/background.jpg) center center no-repeat
    width 100%
    height 600px
    position fixed
    margin 60px 0 0 0
    overflow hidden
    vendor('background-size', cover)
    
    #header-parallax
        position fixed
        margin-top 50px
        
    .phone
        height 600px
        width 460px
        display block
        background url(../images/2.png) center bottom no-repeat
        float left
        background-size: 100%;
        
    .presentation
        float right
        width 52%
        margin-top 150px

        a
           
        h1
            color #FFF
            font-size 2em
            font-weight 300
            padding 30px 0 0 0
            margin 0px
            line-height 1.4em
            text-shadow(-1px 0px 1px rgba(214, 214, 214, 0.59))
            
        p
            color #333
            font-size 1em
            font-weight 700
            line-height 3em

/**
 * Sections
 */
 
section
    padding 35px 0

.section-master
    background #FFF
    position absolute
    top 650px
    width 100%
    

/**
 * Section - Support
 */

#section-support
    overflow hidden
    
    h2
        title(2.6em, #D8852E)
        
    .subtitle
        subtitle(1.1em, #777)
        
    ul
        padding 0px
        margin 50px 0 10px 0
         
    li
        margin 1% 3% 
        width 27%
        display inline-block
        vertical-align top 
        text-align center
        
        h3
            color #333
            font-size 1.5em
            font-weight 400
            margin 0 0 2% 0
            
        p
            color #777
            font-size 1em
            line-height 1.5em
           
/**
 * Section - Benefit
 */

#section-benefit
    overflow hidden

    h2
        title(2.6em, #04B24B)
        
    .interactive
        margin 50px 0 0 0
        height 650px
        overflow hidden

        
        #carousel-info
            padding 40px 0 0
            margin 0px
            list-style none
            width 100%
            
            
            // all elements
            li
                float left
                width 48%
                height 180px
                
                .info
                    float right
                    margin 0 180px 0 0
                    text-align center
                    max-width 250px
                    
                    .icon
                        background-image url(../images/carousel/icons.png) 
                        display inline-block
                        width 61px
                        height 61px
                        
                    .arrow
                        position absolute
                        z-index 9999
                        display none
                        
                        
                    &.active
                        .arrow
                            display inline
                            
                        h4
                            color #04B24B


                    &.account
                        .icon
                            background-position 61px 0px 
                            
                        .arrow
                            margin 20px 0 0 62px
                        
                        &.active .icon
                            background-position 0px 0px 
                            
                     &.credit
                        .icon
                            background-position 61px 187px 
                            
                        .arrow
                            margin 20px 0 0 -238px
                            transform(scaleX(-1));
                        
                        &.active .icon
                            background-position 0px 187px 
                            
                     &.message
                        .icon
                            background-position 61px 311px 
                        
                        .arrow
                            margin 10px 0 0 62px
                            
                        &.active .icon
                            background-position 0px 311px 
                            
                     &.data
                        .icon
                            background-position 61px 61px 
                            
                        .arrow
                            margin 10px 0 0 -238px
                            transform(scaleX(-1));
                        
                        &.active .icon
                            background-position 0px 61px 
                            
                     &.indicator
                        .icon
                            background-position 61px 249px 
                        
                        .arrow
                            margin -30px 0 0 62px
                            
                        &.active .icon
                            background-position 0px 249px 
                            

                     &.social
                        .icon
                            background-position 61px 124px 
                            
                        .arrow
                            margin -30px 0 0 -238px
                            transform(scaleX(-1));
                            
                        &.active .icon
                            background-position 0px 124px 
                            

                    h4
                        font-weight 400
                        font-size 1.2em
                        margin 0px
                        color #302E2D
                        
                    p
                        color #777
                        margin 10px 0
                        font-size 1em
                        line-height 1.4em

            
            // only pair elements    
            li:nth-child(2n) 
                float right
                
                .info
                    float left
                    margin 0 0 0 180px
            
        .phone
            overflow hidden
            margin auto
            width 310px
            height 700px
            position absolute
            left 50%
            margin-left -155px

            .background
                width 310px
                height 626px
                background url(../images/movil.png) center bottom no-repeat
                position absolute
                background-size 100% 100%

            #carousel
                margin 95px 0 0 22px
                list-style none
                width 265px
                
                .item img
                    display block
                    width 100%
                    height auto
                
                .owl-pagination
                    display none
                    

